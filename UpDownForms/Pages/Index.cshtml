@page
@model UpDownForms.Pages.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Response[0].RespondentEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Response[0].SubmittedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Response[0].IsDeleted)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Response[0].Form)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Response) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RespondentEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubmittedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsDeleted)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Form.Description)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
